generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    moods     Mood[]
    createdAt DateTime @default(now())
}

model Mood {
    id      String   @id @default(cuid())
    emoji   String
    rating  Int      @db.SmallInt
    comment String?
    tech    String
    date    DateTime @default(now())
    userId  String
    user    User     @relation(fields: [userId], references: [id])

    @@index([rating])
    @@index([tech])
}
